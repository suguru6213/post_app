<!doctype html>
<html lang="ja">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <title>Vecken Offcial Cite</title>
  </head>
<body>
  <header>
    <div class="container">
      <div class="row">
        <h2 class="col-12 text-center pt-3 display-5">
          Vecken</h2>
        <div class="col-12 border-bottom d-sm-none">
      </div>
    </div>
    <div class="container header-nav">
      <nav class="navbar row navbar-expand-sm navbar-light">
        <%= link_to info_path, class: 'navbar-brand col-2 col-sm-1' do %>INFO<% end %>
        <%= link_to schedule_path, class: 'navbar-brand col-2 col-sm-1' do %>SCHEDULE<% end %>
        <%= link_to profile_path, class: 'navbar-brand col-2 col-sm-1' do %>PROFILE<% end %>
        <%= link_to music_path, class: 'navbar-brand col-2 col-sm-1' do %>MUSIC<% end %>
        <%= link_to goods_path, class: "navbar-brand col col-sm-1 d-none d-sm-inline" do %>GOODS<% end %>
        <%= link_to 'https://twitter.com/1230Vecken', class: "navbar-brand col col-sm-1 d-none d-sm-inline" do %>TWITTER<% end %>
        <%= link_to 'https://www.instagram.com/vecken_1230_/?hl=ja', class: "navbar-brand col col-sm-1 d-none d-sm-inline" do %>INSTAGRAM<% end %>
        <%= link_to 'https://instagram.com/vecken_1230_?igshid=g8dxf0i7fe4l', class: "navbar-brand col col-sm-1 d-none d-sm-inline" do %>IGTV<% end %>
        <%= link_to 'https://www.youtube.com/channel/UCvQKxZldgFnhwvwAgPbaWwQ', class: "navbar-brand col col-sm-1 d-none d-sm-inline" do %>YOUTUBE<% end %>
        <button class="navbar-toggler col" data-toggle="collapse" data-target="#menu">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div id="menu" class="d-sm-none collapse navbar-collapse pb-4 mt-3">
          <ul class="navbar-nav d-sm-none">
            <li class="nav-item text-center"><%= link_to root_path, class: 'nav-link' do %>TOP<% end %></li>
            <li class="nav-item text-center"><%= link_to profile_path, class: 'nav-link' do %>PROFILE<% end %></li>
            <li class="nav-item text-center"><%= link_to info_path, class: 'nav-link' do %>INFORMATION<% end %></li>
            <li class="nav-item text-center"><%= link_to music_path, class: 'nav-link' do %>MUSIC<% end %></li>
            <li class="nav-item text-center"><%= link_to goods_path, class: 'nav-link' do %>GOODS<% end %></li>
            <li class="nav-item text-center"><%= link_to 'https://twitter.com/1230Vecken', class: 'nav-link' do %>TWITTER<% end %></li>
            <li class="nav-item text-center"><%= link_to 'https://www.instagram.com/vecken_1230_/?hl=ja', class: 'nav-link' do %>INSTAGRAM<% end %></li>
            <li class="nav-item text-center"><%= link_to 'https://instagram.com/vecken_1230_?igshid=g8dxf0i7fe4l', class: 'nav-link' do %>IGTV<% end %></li>
            <li class="nav-item text-center"><%= link_to 'https://www.youtube.com/channel/UCvQKxZldgFnhwvwAgPbaWwQ', class: 'nav-link' do %>YOUTUBE<% end %></li>
          </ul>
        </div>
      </nav>
    </div>
  </header>

 <%= yield %>


      <div class="row-12">
        <% if user_signed_in? %>
          <div class="col">
            <div class="hide">Copyright © 2020 Vecken. All Rights Reserved.</div>          
          </div>
        <% else %>
          <div class="col float-right">   
            <div class="hide">Copyright © 2020 <%= link_to new_user_session_path, class: 'seek' do %>Vecken.<% end %> All Rights Reserved.</div>          
          </div>
        <% end %>
        </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>