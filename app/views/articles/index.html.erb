
 <div class="post_wrapper">

  <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
<%= image_tag 'vecken1.jpg',  class: "d-block w-100" %>    </div>
    <div class="carousel-item">
<%= image_tag 'vecken4.jpg',  class: "d-block w-100" %>     </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


 <div class="border border-light mb-3">
<br>

  <h6 class="text-center border border-dark p-2 mt-2 mb-4 col-5 mx-auto">WHAT'S NEW</h6>
</div>

<% if user_signed_in? && current_user.id == 1..2 %>
<div class="py-5">
 <h6 class="text-center border border-dark p-2 mt-3 mb-4 col-5 mx-auto bg-dark">
    <%= link_to "ログアウト", destroy_user_session_path, class: "logout-new-font-color", method: :delete %>
 </h6>
  <h6 class="text-center p-2 mt-3 mb-4 col-5 mx-auto bg-danger">
    <%= link_to '新規記事の投稿', new_article_path, class: "logout-new-font-color" %>
  </h6> 
  </div>
<% end %>





  <% @articles.each do |article| %>
    <a href="<%= article.link %>" style="text-decoration: none; color: black;">
      <div class="card border-light mb-3">
        <div class="card-header border-top"><%= article.title %></div>
          <div class="card-body">
            <p class="card-title font-weight-bold"><%= l article.created_at, format: :short %></h5>
            <p class="card-text"><%= simple_format(article.text) %></p>
          </div>
      </div>
    </a>
    <% if user_signed_in? && current_user.id == 1..2 %>
      <h6 class="text-center p-2 mt-3 mb-4 col-5 mx-auto bg-success">
        <%= link_to '編集', "/articles/#{article.id}/edit", method: :get, class: "logout-new-font-color" %>
    </h6>
      <% end %>
  <% end %>
  <%= paginate(@articles) %>

    <div class="border-bottom bb-color mb-3"></div>  
<br>


  <h6 class="text-center border border-dark p-2 mt-3 mb-4 col-5 mx-auto">VIDEO</h6>

<div class="embed-responsive embed-responsive-21by9">
  <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/z4i9XRtp2Rk" allowfullscreen></iframe>
</div>
<div class="row　d-flex offset-4">
<a href="https://twitter.com/1230Vecken" class=""><%= image_tag 'Twitter_Social_Icon_Rounded_Square_Color.png', class: "col-2 m-2 mt-4" %></a>
<a href="https://www.instagram.com/vecken_1230_/?hl=ja" class=""><%= image_tag 'Instagram_AppIcon.png', class: "col-2 m-2 mt-4" %></a>
</div>

</div>
